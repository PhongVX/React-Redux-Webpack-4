{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node":true
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "camelcase": [
            "error",
            { "properties": "always" }
        ],
        "no-unused-vars": [
            "error",
            {
                "vars": "local",
                "args": "none"
            }
            
        ],
        "eqeqeq": [
            "error",
            "always"
        ],
        "no-console": 0
    },
    "settings": {
        "react": {
            "pragma": "React",
            "version": "16.6.1"
        }
    }
}